<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      tools:context="io.github.davoleo.barcodestock.ui.MainActivity">

    <item android:id="@+id/action_search"
          android:title="@string/action_search"
          android:icon="@drawable/search_icon"
          android:orderInCategory="1"
          app:showAsAction="ifRoom|collapseActionView"
          app:actionViewClass="android.widget.SearchView"
    />

    <item android:id="@+id/action_scan"
          android:title="@string/action_scan"
          android:icon="@drawable/baseline_camera_alt_white_24"
          android:orderInCategory="2"
          app:showAsAction="ifRoom"
          android:onClick="startBarcodeScanner"
    />

    <item android:id="@+id/action_settings"
          android:title="@string/action_settings"
          android:icon="@drawable/baseline_settings_white_24"
          android:orderInCategory="3"
          app:showAsAction="ifRoom"
          android:onClick="startSettingsActivity"
    />

    <item android:id="@+id/action_refresh"
          android:title="@string/action_refresh"
          android:orderInCategory="3"
          app:showAsAction="never"
          android:onClick="refreshClearBarcodeList"
    />

    <item android:id="@+id/action_clear"
          android:title="@string/action_clear"
          android:orderInCategory="4"
          app:showAsAction="never"
          android:onClick="refreshClearBarcodeList"
    />
</menu>
